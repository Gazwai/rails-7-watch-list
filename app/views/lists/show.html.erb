<p><%=  @list.name %></p>
<%= simple_form_for [ @list, @bookmark ] do |f| %>
  <%= f.input :movie_id, label: :movie, collection: @movies %>
  <%= f.input :comment, input_html: { min: 20 } %>
  <%= f.button :submit %>
<% end %>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <%= image_tag "#{bookmark.movie.poster_url}" %>
    <h3><%= bookmark.movie.title %></h3>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating %></p>
    <br>
    <p><%= bookmark.comment %></p>
    <%= link_to "Delete", bookmark, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <% end %>
</ul>
